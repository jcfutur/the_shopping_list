{
  "name": "mern_shopping_list",
  "version": "1.0.0",
  "description": "Shopping list build with the MERN stack",
  "engines": {
    "node": "10"
  },
  "homepage": "https://mern-shopping-list-app.appspot.com/",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jcfutur/the_shopping_list.git"
  },
  "bugs": {
    "url": "https://github.com/jcfutur/the_shopping_list/issues"
  },
  "author": "jean camard",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "^4.4.1",
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "mongoose": "^5.9.7",
    "react-transition-group": "^4.3.0",
    "reactstrap": "^8.4.1",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "nodemon": "^2.0.2"
  }
}
